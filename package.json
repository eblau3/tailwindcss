{
  "name": "tailwindcss",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all --serial clean copy build:*",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "browser-sync start --server 'dist' --files 'dist'",
    "pretty": "npm-run-all --parallel pretty:*",
    "build:html": "cpx \"src/pages/**/*\" dist/",
    "build:css": "postcss src/styles/index.css -o dist/assets/css/style.css",
    "build:js": "webpack",
    "build:img": "node imagemin.mjs",
    "watch:html": "chokidar 'src/pages/**/*' --command \"npm-run-all --parallel build:css build:html\"",
    "watch:css": "chokidar \"src/styles/**/*.css\" --command \"npm run build:css\"",
    "watch:js": "chokidar \"src/scripts/**/*.js\" --command \"npm run build:js\"",
    "watch:img": "chokidar \"src/images/**/*\" --command \"npm run build:img\"",
    "watch:copy": "chokidar \"src/copy/**/*\" --command \"npm run copy\"",
    "copy": "cpx \"src/copy/**/*\" dist/",
    "clean": "rimraf dist",
    "pretty:html": "prettier \"src/pages/**/*.html\" --write",
    "pretty:css": "prettier \"src/styles/**/*.css\" --write",
    "pretty:js": "prettier \"src/scripts/**/*.js\" --write"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "browser-sync": "^3.0.2",
    "chokidar-cli": "^3.0.0",
    "cpx": "^1.5.0",
    "cssnano": "^7.0.5",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-svgo": "^11.0.1",
    "imagemin-webp": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.41",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "postcss-pxtorem": "^6.1.0",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.10",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  }
}
